<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.ReplyMapper">

    <!-- 게시글의 댓글을 등록합니다. -->
    <insert id="insert"
            parameterType="ReplyDto"
            useGeneratedKeys="true"
            keyProperty="replyId">
        INSERT INTO reply
            (board_id
            , reply_content)
        VALUES
            (#{boardId},
             #{replyContent})
    </insert>

    <!-- 댓글을 조회합니다. -->
    <select id="findById"
            parameterType="long"
            resultType="ReplyDto">
        SELECT
            reply_id,
            board_id,
            reply_content,
            create_date,
            update_date
        FROM reply
        WHERE reply_id = #{replyId}
    </select>

    <!-- 게시글번호로 댓글을 조회합니다.-->
    <select id="findByBoardId"
            parameterType="long"
            resultType="ReplyDto">
        SELECT
            reply_id,
            board_id,
            reply_content,
            create_date,
            update_date
        FROM reply
        WHERE board_id = #{boardId}
    </select>

</mapper>